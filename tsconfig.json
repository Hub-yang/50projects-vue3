{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": [
      "vite/client"
    ],
    "allowJs": true,
    "strict": true,
    "importHelpers": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "auto-imports.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "eslint.config.js",
    "commitlint.config.js"
  ]
}
